# AACT Database Connection
# Public AACT PostgreSQL credentials (read-only access)
# Register at https://aact.ctti-clinicaltrials.org/users/sign_up
AACT_HOST=aact-db.ctti-clinicaltrials.org
AACT_PORT=5432
AACT_DATABASE=aact
AACT_USER=your_username
AACT_PASSWORD=your_password

# Neo4j Connection
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Data paths
DATA_RAW_PATH=./data/raw
DATA_STAGED_PATH=./data/staged
DATA_GRAPH_PATH=./data/graph

# Extraction settings
EXTRACTION_LIMIT=1000
EXTRACTION_PHASES=Phase 1,Phase 2,Phase 3,Phase 4

# Logging
LOG_LEVEL=INFO
